<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SearchHandlerDemo.ViewModels"
             x:DataType="viewModels:StudentDetailViewModel"
             x:Class="SearchHandlerDemo.Views.StudentDetailView"
             Title="StudentDetailView">
    <VerticalStackLayout Padding="10">
        <Label 
            Text="Student Detail" FontSize="28" />

        <Label Text="{Binding StudentDetail.Name,StringFormat='Name: {0}'}" />
        <Label Text="{Binding StudentDetail.Email,StringFormat='Email: {0}'}" />
    </VerticalStackLayout>
</ContentPage>